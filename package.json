{
  "name": "@drivej/xrworld",
  "version": "1.0.1",
  "description": "Virtual Reality Lib",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build --config vite.config.build.ts && npm run build:types",
    "build:types": "tsc --project tsconfig.json --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build",
    "test": "cd test-app && npm run dev",
    "test:install": "cd test-app && npm install"
  },
  "peerDependencies": {
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "three": "^0.148.0",
    "gsap": "^3.11.4"
  },
  "devDependencies": {
    "@types/three": "^0.148.1",
    "@types/node": "^25.2.2",
    "@types/react": "^18.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.0.0",
    "vite": "^6.0.7",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "keywords": [
    "pixi",
    "pixijs",
    "animation",
    "sound",
    "audio",
    "react",
    "typescript"
  ],
  "author": "drivej",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drivej/wave-anim.git"
  }
}
