{
  "name": "@drivej/xrworld",
  "version": "1.0.1",
  "description": "WebXR Virtual Reality Library for Three.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build --config vite.config.build.ts && npm run build:types",
    "build:types": "tsc --project tsconfig.json --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build",
    "test": "cd test-app && npm run dev",
    "test:install": "cd test-app && npm install"
  },
  "peerDependencies": {
    "gsap": "^3.14.2",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/three": "^0.148.1",
    "@vitejs/plugin-basic-ssl": "^2.1.4",
    "gsap": "^3.14.2",
    "typescript": "^5.0.0",
    "vite": "^6.0.7"
  },
  "dependencies": {
  },
  "keywords": [
    "webxr",
    "xr",
    "vr",
    "virtual-reality",
    "three",
    "threejs",
    "3d",
    "typescript"
  ],
  "author": "drivej",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drivej/xrworld.git"
  }
}
